<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.weekthree.camera.CameraActivity">

    <ImageView
        android:id="@+id/activity_camera_iv_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@color/cardview_dark_background"/>

    <Button
        android:id="@+id/activity_camera_btn_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_camera_btn_app"
        android:text="make photo by default camera"/>

    <Button
        android:id="@+id/activity_camera_btn_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_camera_iv_photo"
        android:text="make photo by this app"/>

</RelativeLayout>
